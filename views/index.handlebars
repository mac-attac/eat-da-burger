<h1>Eat Da Burger!</h1>

<img src="http://www.pngmart.com/files/16/Burger-Junk-Food-PNG-Clipart.png" alt="burger">

<div class="container">
    <div class="row">
        <div class="col-4">
            <ul>
            {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devour=true}}
                {{/unless}}
            {{/each}}
            </ul>
        </div>

        <div class="col-4">
            <form class="create-form">

            <div class="form-group">
                <label for="bur">Burger Name:</label>
                <br>
                <input type="text" id="bur" name="burger_name">
            </div>

            <div class="form-group">
                <label for="dev">Eat it now?</label><br>
                <input type="radio" name="devoured" value="1" checked> Dig in!<br>
                <input type="radio" name="devoured" value="0"> Save it for later...
                <button type="submit">Add burger</button>
            </div>

            </form>
        </div>

        <div class="col-4">
            <ul>
            {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devour=false}}
                {{/if}}
            {{/each}}
            </ul>
        </div>
    </div>
</div>







